{
    "app-id": "org.gnome.Calculator",
    "runtime": "org.gnome.Platform",
    "runtime-version": "3.36",
    "sdk": "org.gnome.Sdk",
    "command": "gnome-calculator",
    "finish-args": [
        /* X11 + XShm access */
        "--share=ipc", "--socket=fallback-x11",
        /* Wayland access */
        "--socket=wayland",
        /* Needs to talk to the network to get currency data */
        "--share=network",
        "--metadata=X-DConf=migrate-path=/org/gnome/calculator/"
    ],
    "cleanup": ["/include", "/lib/pkgconfig",
                "/share/pkgconfig", "/share/aclocal",
                "/man", "/share/man", "/share/gtk-doc",
                "/share/vala", "*.la", "*.a",
                "/bin/gcalccmd",
                "/lib/girepository-1.0", "/share/info", "/share/gtksourceview-4",
                "/share/doc", "/share/gir-1.0"
    ],
    "modules": [
        {
            "name": "mpfr",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://ftp.gnu.org/gnu/mpfr/mpfr-4.0.2.tar.xz",
                    "sha256": "1d3be708604eae0e42d578ba93b390c2a145f17743a744d8f3f8c2ad5855a38a"
                }
            ]
        },
        {
            "name": "mpc",
            "config-opts" : [
                "--with-mpfr=/app"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://ftp.gnu.org/gnu/mpc/mpc-1.1.0.tar.gz",
                    "sha256": "6985c538143c1208dcb1ac42cedad6ff52e267b47e5f970183a3e75125b43c2e"
                }
            ]
        },
        {
            "name": "gtksourceview",
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.gnome.org/sources/gtksourceview/4.6/gtksourceview-4.6.0.tar.xz",
                    "sha256": "4c13e30ab2e602abdc56f55d35f43c1142a79b1cd77aa8839d2fc85e966d9a85"
                }
            ]
        },
        {
            "name": "gnome-calculator",
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.gnome.org/sources/gnome-calculator/3.36/gnome-calculator-3.36.0.tar.xz",
                    "sha256": "a2e830f9c9856fad65dad1d6c0ae6abad0f0b496c9984ac005315c5cc4220db3"
                }
            ]
        }
    ]
}
